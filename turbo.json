{
  "$schema": "https://turbo.build/schema.json",
  "version": "1",
  "extends": ["//"],
  "globalDependencies": ["**/.env", "**/.env.local"],
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**", "build/**"],
      "cache": true,
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "outputs": ["dist/**", ".next/**"],
      "persistent": true
    },
    "lint": {
      "outputs": [".eslintcache"],
      "cache": true
    },
    "type-check": {
      "outputs": [],
      "cache": true,
      "dependsOn": ["^type-check"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "cache": true,
      "inputs": ["src/**", "tests/**", "jest.config.js"]
    }
  }
}
